<head>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
</head>
<form method="post" action="/change">
  <input type="text" name="name" placeholder="Pet's name">
  <button type="submit" class="btn btn-primary">Change name</button>
</form>
<h1> <%= name_value %></h1>
<% if health_value.to_i < 1 || satiety_value.to_i < 1 || happiness_value.to_i < 1 || purity_value.to_i < 1 %>
<img src='https://cdn.drawception.com/images/panels/2016/9-29/BeqtyOmXS6-4.png
' width = 20%>
<% else %>
<img src='https://www.turner.com/s3fs-public/image_u/img_scrappy_2.JPG' width=20%>
<% end %>
<p>Health: <%= health_value %></p>
<p>Satiety: <%= satiety_value %></p>
<p>Happiness: <%= happiness_value %></p>
<p>Purity: <%= purity_value %></p>
<div>
  <form method="post" action="/check">
    <button type="submit" name="check" class="btn btn-success">CHECK</button>
  </form>
  <form method="post" action="/feed">
    <button type="submit" name="feed" class="btn btn-dark">FEED</button>
  </form>
  <form method="post" action="/walk">
    <button type="submit" name="walk" class="btn btn-secondary">WALK</button>
  </form>
  <form method="post" action="/wash">
    <button type="submit" name="wash" class="btn btn-info">WASH</button>
  </form>
  <form method="post" action="/new">
    <button type="submit" name="new" class="btn btn-danger">Restart</button>
  </form>
</div>
